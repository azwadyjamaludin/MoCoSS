<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grpCounTL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/contentRowGrp"
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleRowInd">

        <TextView
            android:id="@+id/numDataGrp"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/dateEditGrp"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/sesCodeEditGrp"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <EditText
            android:id="@+id/sesHourEditGrp"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/sesRptBtnGrp"
            android:layout_width="151dp"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/avBtnGrp"
            android:layout_width="151dp"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notesGrp"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />
    </TableRow>
</TableLayout>