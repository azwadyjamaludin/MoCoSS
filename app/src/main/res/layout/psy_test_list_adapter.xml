<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pTAdaptTL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:id="@+id/PTAdaptConRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/psyTestNumE"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/psyTestDateE"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/psyTestHourE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/psyTestStudCodeE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/psyTestInvNameE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/white" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/psyTestUpFileE"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/abstract_geo"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/psyTestNote"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />
    </TableRow>

</TableLayout>